<div class="author">
  <h1 class="author__heading">Welcome to the Music Database</h1>
  <p class="author__body">Search to find any album by any artist</p>
</div>



  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.artistName %></span>
          <span><%= post.albumName %></span>
          <span><%= post.releaseDate %></span>
        </a>
      </li>
    <% }) %>
  </ul>


  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View More</a>
  <% } %>

 

  



</section>